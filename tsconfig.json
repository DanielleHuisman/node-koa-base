{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["esnext"],
        "module": "ES2022",
        "moduleResolution": "node",

        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },

        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true
    },
    "include": ["src/**/*"]
}
